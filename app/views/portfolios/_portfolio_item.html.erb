<div class="col" data-sortable-id="<%= portfolio_item.id %>">
  <div class="card shadow-sm">
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text">
      	<span><%= portfolio_item.title %></span> <%= portfolio_item.subtitle %>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "View", portfolio_show_path(portfolio_item), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: "btn btn-sm btn-outline-secondary" if logged_in?(:site_admin) %>
        </div>
        <small class="text-body-secondary"><%= distance_of_time_in_words_to_now(portfolio_item.created_at) %></small>
      </div>
    </div>
  </div>
</div>
