<article class="blog-post">
  <h2 class="display-5">
    <%= link_to blog.title, blog %>
  </h2>
  <p class="blog-post-meta">
    Published <%= distance_of_time_in_words_to_now(blog.created_at) %> ago
  </p>
  
  <% if logged_in?(:site_admin) %>
    <p class="blog-post-meta">
      <%= link_to blog.status, toggle_status_blog_path(blog), data: { "turbo-method" => :patch } %> /
      <%= link_to "Edit", edit_blog_path(blog) %> /
      <%= link_to "Delete Post", blog, data: { "turbo-method": :delete } %>
    </p>
  <% end %>

  <p>
    <%= blog.body %>
  </p>
</article>
